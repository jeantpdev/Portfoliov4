---
import proyectosRealizados from '@/data/proyectos.json';
import Card from '@/components/proyectos-componentes/Card.astro';
---

<div class="flex flex-col mt-5 space-y-5 justify-between lg:flex-row md:mt-12">
    <div>
        <p class="text-3xl md:text-4xl font-bold leading-tight"><i class="fa-solid fa-folder" aria-hidden="true"></i> Proyectos</p>
    </div>
    <div>
        <a class="text-zinc-900 bg-gray-200 hover:bg-gray-300 font-medium rounded-lg text-md px-3 py-3 md:py-3" target ="_blank"  href="https://github.com/jeantpdev"><i class="fa-brands fa-github" aria-hidden="true"></i> Ver todos </a>
    </div>
</div>


<div class="flex flex-col gap-y-12 mt-12">
    {proyectosRealizados.map((proyectos, id) => {
        return(
        <Card
            titulo = {proyectos.titulo},
            tecnologias = {proyectos.tecnologias},
            descripcion = {proyectos.descripcion},
            link_github = {proyectos.link_github},
            link_pagina = {proyectos.link_pagina},
            id = {id},
        />
        );
    })
}
</div>